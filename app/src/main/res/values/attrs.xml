<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyTextView">
        <attr name="cTextSize" format="dimension" />
        <attr name="cTextColor" format="color" />
        <attr name="cText" format="string" />
        <attr name="cBackground" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="QQStepAnimate">
        <attr name="stepOuterColor" format="color" />
        <attr name="stepInnerColor" format="color" />
        <attr name="stepBorderWidth" format="dimension" />
        <attr name="stepInnerValue" format="dimension" />
        <attr name="stepMaxValue" format="dimension" />
        <attr name="stepText" format="string" />
        <attr name="stepTextColor" format="color" />
        <attr name="stepTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TextChangeView">
        <attr name="normalTextColor" format="color" />
        <attr name="changedTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ProgressCircleAnimate">
        <attr name="startAngle" format="integer" />
        <attr name="innerCircleColor" format="color" />
        <attr name="outerCircleColor" format="color" />
        <attr name="maxValue" format="integer" />
        <attr name="progressValue" format="integer" />
        <attr name="progressTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="IconChangeAnimateView">
        <attr name="iconColors" format="reference" />
    </declare-styleable>

    <declare-styleable name="RatingBar">
        <attr name="normalIcon" format="reference" />
        <attr name="selectedIcon" format="reference" />
        <attr name="starCount" format="integer" />
        <attr name="rate" format="float" />
        <attr name="starSize" format="dimension" />
        <attr name="starPadding" format="dimension" />
        <attr name="normalColor" format="color" />
        <attr name="selectedColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SideBarLetter">
        <attr name="textSize" format="dimension" />
        <attr name="normalLetterColor" format="color" />
        <attr name="selectedLetterColor" format="color" />
        <attr name="selectedBackgroundColor" format="color" />
        <attr name="showBackground" format="boolean" />
        <attr name="padding" format="dimension" />
    </declare-styleable>


</resources>